<img src="/public/Images/burger.png">

<h2>Burger Eater!</h2>

<div class = "container">
    <div class = "row">
        <div class = "col-sm-6">
            <ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
        </div>
        <div class="col-sm-6">
            <ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
        </div>
    </div>
</div>

<h1>Add a Burger!</h1>
<form class = "create-form">
  <div class="form-group">
    <label for="burger-name">Burger Name</label>
    <textarea type="text" id="burger-name" name="name"></textarea>
  </div>
  <button type="submit">Add Burger</button>
</form>